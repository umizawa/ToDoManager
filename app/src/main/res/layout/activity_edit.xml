<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.naoya.todomanager.EditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/toolbarTheme"
            app:popupTheme="@style/toolbarMenuTheme"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/label_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アイコン"/>
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@id/label_thumbnail"/>
            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thumbnail"
                android:text="名前"/>
            <EditText
                android:id="@+id/name"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_name"
                android:inputType="text"
                android:text="名前を入力してください"/>
            <TextView
                android:id="@+id/label_due_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:text="期日"/>
            <TextView
                android:id="@+id/due_day_picker_text"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_due_day"
                android:text="YYYY/MM/DD"/>
            <TextView
                android:id="@+id/due_time_picker_text"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_due_day"
                android:layout_toRightOf="@id/due_day_picker_text"
                android:paddingLeft="10dp"
                android:text="HH:MM"/>
            <TextView
                android:id="@+id/label_importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/due_time_picker_text"
                android:text="重要度"/>
            <Spinner
                android:id="@+id/spinner_importance"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_importance"
                android:entries="@array/importance_values"/>
            <TextView
                android:id="@+id/label_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_importance"
                android:text="リマインダー"/>
            <TextView
                android:id="@+id/reminder_day_picker_text"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_reminder"
                android:text="YYYY/MM/DD"/>
            <TextView
                android:id="@+id/reminder_time_picker_text"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_reminder"
                android:layout_toRightOf="@id/reminder_day_picker_text"
                android:text="HH:MM"/>
            <TextView
                android:id="@+id/label_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/reminder_day_picker_text"
                android:text="タグ"/>
            <Spinner
                android:id="@+id/spinner_tag"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_tags"
                android:entries="@array/importance_values"/>
            <TextView
                android:id="@+id/label_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner_tag"
                android:text="繰り返し"/>
            <Spinner
                android:id="@+id/spinner_repeat"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_repeat"
                android:entries="@array/importance_values"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
