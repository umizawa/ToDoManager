<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/title"
            android:layout_toRightOf="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="タイトル"
            android:textSize="22sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/image">
            <TextView
                android:id="@+id/label_edited_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登録:"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/edited_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YYYY/MM/DD"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/label_due_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="期限:"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/due_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YYYY/MM/DD"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/label_importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="重要度:"
                android:textSize="11sp"/>
            <TextView
                android:id="@+id/importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I"
                android:textSize="11sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image">
            <TextView
                android:id="@+id/label_tag"
                android:layout_below="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:text="タグ:"/>
            <TextView
                android:id="@+id/tag"
                android:layout_below="@id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hogehoge"/>
        </LinearLayout>
    </RelativeLayout>
    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_check"
        android:layout_alignParentRight="true"/>
</RelativeLayout>